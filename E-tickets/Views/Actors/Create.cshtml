@model Actor

@{
    ViewData["Title"] = "Add a new actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <h1>Add a new actor</h1>

        <div class="row">

            <div class="col-md-8 offset-2">


                <form asp-action="Create">


                    <div asp-validation-summary="ModelOnly" class="text-danger">

                    </div>


                    <div class="form-group text-center">
                        <img id="PictureProfilePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>


                    <div class="form-group">
                        <label asp-for="PictureProfileURL" class="control-label"></label>
                        <input asp-for="PictureProfileURL" class="form-control" />
                        <span asp-validation-for="PictureProfileURL" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="FullName" class="control-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('PictureProfilePreview');
            output.src = $("#PictureProfileURL").val();
        })


        $("#PictureProfileURL").on("change", function () {
            var output = document.getElementById('PictureProfilePreview');
            output.src = $(this).val();
        })
    </script>
}

