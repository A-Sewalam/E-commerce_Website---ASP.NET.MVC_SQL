@* @* Define model *@ 

@model IEnumerable<Producer>

    @* Define data *@

    @{
    ViewData["Title"] = "List of Producers";
    }

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model =>model.PictureProfileURL)</th>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Bio)</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.PictureProfileURL" alt="@item.FullName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Bio)
                        </td>

                         <td class="align-middle">
                           <a class = "btn btn-outline-primary"> <i class=" bi bi-pencile-square">Edit</i></a>
                           <a class = "btn btn-outline-info" asp-action = "Details" asp-route-id ="@item.Id"> <i class=" bi bi-eye">Details</i></a>
                           <a class = "btn btn-outline-danger "> <i class=" bi bi-trash">Delete</i></a>
                        </td

                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>

